{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    'config:recommended',
    'helpers:pinGitHubActionDigests',
    ':automergePr',
    ':disableRateLimiting',
    ':dependencyDashboard',
    ':semanticCommits',
    ':timezone(Europe/Amsterdam)',
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["extension\\.toml$"],
      "matchStrings": [
        "repository = \"https://github\\.com/acristoffers/tree-sitter-matlab\"\\s+rev = \"(?<currentDigest>[a-f0-9]{40})\""
      ],
      "depNameTemplate": "tree-sitter-matlab",
      "datasourceTemplate": "git-refs",
      "packageNameTemplate": "https://github.com/acristoffers/tree-sitter-matlab"
    }
  ],
  "packageRules": [
    {
      // Apply to tree-sitter-matlab updates
      "matchDatasources": ["github-tags"],
      "matchPackagePatterns": ["tree-sitter-matlab"],

      // Use conventional commits format
      "semanticCommits": true,
      "semanticCommitType": "fix",
      "semanticCommitScope": "deps",
      "prTitle": "fix(deps): update tree-sitter-matlab to {{{newVersion}}}",

      // Disable auto-merge for manual review
      "automerge": false,

      // Prevent duplicate PRs
      "prCreation": "not-pending",
      "labels": ["dependencies", "tree-sitter-matlab"]
    }
  ]
}
